include navigation

mixin container
  div(style="display: flex; height: 100vh; width: 100%;")
    block

mixin content
  div(style="background: #ccc; flex-grow: 1;")
    block

mixin sidebar
  div(style="width: 20rem;")
    +navigation

mixin base
  html(lang="en")
    head
      title Klimatkoll Digital Card Database
    body(style="margin: 0; padding: 0;")
      +container
        +sidebar
        +content
          block
