include navigation

mixin container
  div(style="display: flex; min-height: 100vh; width: 100%;")
    block

mixin content
  div(style="background: #ccc; flex-grow: 1;")
    block

mixin sidebar
  div(style="width: 20rem; flex-shrink: 0;")
    +navigation

mixin fonts
  style="@font-face { src: url(/fonts/Poppins-Medium.ttf); font-family: 'Poppins'; }"

mixin base
  doctype html
  html(lang="en")
    head
      title Klimatkoll Digital Card Database
      +fonts
    body(style="margin: 0; padding: 0; font-family: Poppins, sans-serif;")
      +container
        +sidebar
        +content
          block
