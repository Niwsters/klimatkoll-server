mixin link(url, label, currentPath)
  div(style="margin-bottom: 1rem; text-transform: uppercase;")
    a(href="/admin" + url, style=`color: black; text-decoration: none; ${currentPath === url ? "color: teal;" : ""}`)= label

mixin navigation
  div(style="padding: 1.5rem 1.25rem;")
    +link("/languages", "Manage languages", path)
    +link("/upload", "Upload card images", path)
    +link("/remove-images", "Remove images", path)
    +link("/pair-images", "Pair front and back images", path)
    +link("/cards", "Edit cards", path)
    +link("/localisation", "Localisation", path)
